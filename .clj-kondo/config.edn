                      datahike.api/database-exists?
                      datahike.api/create-database
                      datahike.api/connect
                      datahike.api/transact
                      datahike.api/q
                      datahike.api/db
                      datahike.api/entity
                      datahike.api/pull
                      datahike.api/release
                      datahike.api/delete-database
                      datahike.api/history
                      datahike.api/as-of
                      datahike.api/since]}}

 ;; Per-namespace configuration for core.logic files
 :config-in-ns
 {hive-mcp.swarm.logic
  {:linters {:unresolved-symbol {:level :off}
             :syntax {:level :off}}}
  hive-mcp.swarm.logic.predicates
