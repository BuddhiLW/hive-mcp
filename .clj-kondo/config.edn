{:lint-as {;; pldb/db-rel defines relations - column names are schema, not symbols
           clojure.core.logic.pldb/db-rel clojure.core/declare
           ;; with-entry binds entry symbol like let
           hive-mcp.tools.memory.core/with-entry clojure.core/let
           ;; manifold.deferred macros - let-flow binds like let
           manifold.deferred/let-flow clojure.core/let
           manifold.deferred/let-flow' clojure.core/let
           manifold.deferred/loop clojure.core/let
           ;; dns.result let-ok is railway-oriented let
           hive-mcp.dns.result/let-ok clojure.core/let
           ;; pool with-connection binds like with-open
           hive-mcp.addons.pool/with-connection clojure.core/with-open
           ;; test.check defspec defines test vars like deftest
           clojure.test.check.clojure-test/defspec clojure.test/deftest
           ;; hive-test property macros expand to defspec
           hive-test.properties/defprop-total clojure.test/deftest
           hive-test.properties/defprop-idempotent clojure.test/deftest
           hive-test.properties/defprop-roundtrip clojure.test/deftest
           hive-test.properties/defprop-complement clojure.test/deftest
           hive-test.properties/defprop-fsm-terminates clojure.test/deftest
           hive-test.properties/defprops-monad clojure.test/deftest}

